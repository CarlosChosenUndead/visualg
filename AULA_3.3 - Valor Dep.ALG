Algoritmo "aula_3.1"





Var
valordep , rendmes, rendtotal: real

Inicio
Escreva ("Valor depositado: ")
Leia (valordep)

rendmes:= valordep*0.7/100
rendtotal:= valordep*0.7/100+valordep

Escreval ("O rendimento mensal é: R$ ", rendmes:2:2)
Escreval ("O rendimento total mensal é: R$", rendtotal:2:2)

Fimalgoritmo